# Coverage.py конфигурация

[run]
# Исключаем из покрытия
omit = 
    */tests/*
    */venv/*
    */__pycache__/*
    */site-packages/*
    conftest.py
    */migrations/*
    setup.py

# Включаем branch coverage
branch = True

# Параллельное выполнение
parallel = True

# Источник кода
source = .

[report]
# Исключаем строки из отчета
exclude_lines =
    # Стандартные исключения
    pragma: no cover
    def __repr__
    raise AssertionError
    raise NotImplementedError
    
    # Код запуска
    if __name__ == .__main__.:
    
    # Type checking
    if TYPE_CHECKING:
    @abstractmethod
    
    # Debug код
    if settings.DEBUG:
    if config.DEBUG:
    
    # Нереализованные методы
    raise NotImplementedError
    return NotImplemented
    
    # Defensive programming
    except Exception:
    except KeyboardInterrupt:

# Показывать пропущенные строки
show_missing = True

# Минимальный процент покрытия
fail_under = 70

# Точность процентов
precision = 2

# Сортировка отчета
sort = Cover

[html]
# Папка для HTML отчета
directory = htmlcov

[xml]
# Файл для XML отчета
output = coverage.xml
